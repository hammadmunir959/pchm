# Django Core Settings
DJANGO_ENV=development
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For Docker: DB_HOST=db, DB_PORT=5432
# For Local: DB_HOST=localhost, DB_PORT=5433 (your local PostgreSQL port)
DB_NAME=pchm_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=db
DB_PORT=5432

# Redis Configuration
# For Docker: redis://redis:6379/0
# For Local: redis://localhost:6379/0
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=Prestige-Car-Hire  <no-reply@example.com>
SUPPORT_EMAIL=support@example.com

# GROQ API (for AI Chatbot)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=qwen/qwen3-32b

# reCAPTCHA (Spam Protection)
RECAPTCHA_PUBLIC_KEY=your-recaptcha-public-key-here
RECAPTCHA_PRIVATE_KEY=your-recaptcha-private-key-here
RECAPTCHA_REQUIRED_SCORE=0.5

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Frontend API URL (for Vite build)
# For Docker: http://backend:8000
# For Local: http://localhost:8000
VITE_API_URL=http://localhost:8000

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=local
BACKUP_SCHEDULE_HOUR=2
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=us-east-1

# Site Configuration
SITE_NAME=Prestige Car Hire Management
